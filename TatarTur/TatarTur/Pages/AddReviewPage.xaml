<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TatarTur.Pages.AddReviewPage" Visual="Material" Title="Отзыв">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Оставьте отзыв" TextColor="black"/>
                <Editor x:Name="reviewDescript"/>
            </StackLayout>
            
            <StackLayout VerticalOptions="Center"  Orientation="Horizontal">
                <Button Text="Отмена" Clicked="Cancel" HorizontalOptions="FillAndExpand"/>
                <Button Text="Добавить" Clicked="SaveReview" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>